{
  "name": "car-sales-website",
  "version": "1.0.0",
  "description": "Car Sales Website with PayPal Integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "dev": "nodemon server.js",
    "build": "npm install && npm run build:css && npm run copy-files",
    "build:css": "sass src/scss/main.scss:public/css/main.css --style compressed",
    "copy-files": "cp -r public/* dist/ && cp -r src/js/* dist/js/ && cp -r src/images/* dist/images/",
    "preview": "vite preview"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "vite": "^6.3.5"
  }
}
